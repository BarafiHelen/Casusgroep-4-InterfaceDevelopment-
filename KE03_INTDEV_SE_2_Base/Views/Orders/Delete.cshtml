@model DataAccessLayer.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

<h4>Are you sure you want to delete this order?</h4>
<div>
    <p><strong>Order #@Model.Id</strong></p>
    <p><strong>Customer:</strong> @Model.Customer.Name</p>
    <p><strong>Date:</strong> @Model.OrderDate.ToShortDateString()</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
