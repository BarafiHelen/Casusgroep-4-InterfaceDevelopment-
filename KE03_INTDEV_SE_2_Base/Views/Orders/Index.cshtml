@model IEnumerable<DataAccessLayer.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2 class="mt-4">📦 Orders</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-success mb-3">
        <i class="bi bi-plus-circle"></i> Create New Order
    </a>
</p>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var order in Model)
    {
        <div class="col">
            <div class="card border-success shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-receipt"></i> Order #@order.Id
                    </h5>
                    <p class="card-text">
                        <strong>Customer:</strong> @order.Customer.Name<br />
                        <strong>Date:</strong> @order.OrderDate.ToShortDateString()
                    </p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-info btn-sm">🔎 Details</a>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-outline-warning btn-sm">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-outline-success btn-sm">🗑️ Delete</a>
                </div>
            </div>
        </div>
    }
</div>
