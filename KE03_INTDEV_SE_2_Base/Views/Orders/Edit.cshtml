@model DataAccessLayer.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<div class="card border-warning mt-4">
    <div class="card-header bg-warning text-white">
        <h4><i class="bi bi-pencil-square"></i> Edit Order</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="OrderDate" class="form-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CustomerId" class="form-label">Customer</label>
                <select asp-for="CustomerId" class="form-select" asp-items="@(new SelectList(ViewBag.CustomerList, "Id", "Name", Model.CustomerId))"></select>
            </div>

            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
