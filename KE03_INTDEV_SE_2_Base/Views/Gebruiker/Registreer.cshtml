@model KE03_INTDEV_SE_2_Base.Models.Gebruiker

@{
    ViewData["Title"] = "Registreren";
}

<div class="container mt-5">
    <div class="card shadow-sm border-success">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Registreren</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Gebruikersnaam" class="form-label fw-bold">Gebruikersnaam</label>
                    <input asp-for="Gebruikersnaam" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Wachtwoord" class="form-label fw-bold">Wachtwoord</label>
                    <input asp-for="Wachtwoord" type="password" class="form-control" />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Registreer</button>
                    <a href="/Gebruiker/Login" class="btn btn-outline-secondary">Terug naar login</a>
                </div>
            </form>
        </div>
    </div>
</div>
