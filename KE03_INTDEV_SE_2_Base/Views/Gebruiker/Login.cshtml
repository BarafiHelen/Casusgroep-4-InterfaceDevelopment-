@model KE03_INTDEV_SE_2_Base.Models.Gebruiker

<h2>Inloggen</h2>
<form method="post">
    <label>Gebruikersnaam</label><br />
    <input asp-for="Gebruikersnaam" /><br />
    <label>Wachtwoord</label><br />
    <input asp-for="Wachtwoord" type="password" /><br />
    <button type="submit">Login</button>
</form>

@if (ViewBag.Melding != null)
{
    <p style="color:red">@ViewBag.Melding</p>
}

