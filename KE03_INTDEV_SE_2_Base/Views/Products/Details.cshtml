@model DataAccessLayer.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="Product Image" style="object-fit: cover; height: 100%; width: 100%;">
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center h-100 bg-light text-muted">
                        <span>No Image</span>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Price:</strong> €@Model.Price.ToString("0.00")</p>
                    <p class="card-text"><strong>Stock:</strong> @Model.Stock</p>
                    <p class="card-text"><strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
                    <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>

                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary me-2">Edit</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>