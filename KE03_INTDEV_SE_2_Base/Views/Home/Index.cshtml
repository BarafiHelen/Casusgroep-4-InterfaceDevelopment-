@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4 mt-4">Welcome to the Matrix Inc. Admin Portal</h1>
    <p class="lead">Manage products, customers, and orders efficiently with our powerful backoffice tools.</p>

    <div class="row justify-content-center mt-5">
        <div class="col-md-3">
            <div class="card shadow-sm border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Products</h5>
                    <p class="card-text">View, create, and manage products.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">Go to Products</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-success">
                <div class="card-body text-center">
                    <i class="bi bi-people" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Customers</h5>
                    <p class="card-text">Manage all customer details.</p>
                    <a asp-controller="Customers" asp-action="Index" class="btn btn-outline-success">Go to Customers</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-info">
                <div class="card-body text-center">
                    <i class="bi bi-receipt" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Orders</h5>
                    <p class="card-text">View and process orders.</p>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-info">Go to Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
